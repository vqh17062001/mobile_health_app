<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">

    <!-- Drag Handle for Bottom Sheet -->
    <View android:layout_width="40dp" android:layout_height="4dp" android:layout_gravity="center_horizontal" android:layout_marginTop="8dp" android:background="@drawable/bottom_sheet_handle" android:backgroundTint="?attr/colorOnSurface" android:alpha="0.4" />

    <androidx.core.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:padding="16dp" android:layout_marginTop="20dp" app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">

            <!-- Header -->
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="1dp">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:text="@string/device_information" android:textSize="24sp" android:textStyle="bold" android:textColor="?attr/colorPrimary" />

                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:layout_centerVertical="true" android:orientation="horizontal">

                    <ImageButton android:id="@+id/btnRefreshInfo" android:layout_width="48dp" android:layout_height="48dp" android:contentDescription="@string/refresh_device_info" android:src="@drawable/icons8_refresh" android:background="?attr/selectableItemBackgroundBorderless" android:padding="8dp" android:scaleType="centerInside" app:tint="?attr/colorPrimary" android:layout_marginEnd="8dp" />

                    <ImageButton android:id="@+id/btnClose" android:layout_width="48dp" android:layout_height="48dp" android:background="?attr/selectableItemBackgroundBorderless" android:contentDescription="@string/close" android:src="@drawable/outline_arrow_drop_down_24" android:padding="0dp" android:scaleType="centerInside" app:tint="?attr/colorPrimary" />
                </LinearLayout>
            </RelativeLayout>

            <!-- Divider -->
            <View android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginBottom="8dp" android:background="#E0E0E0" />

            <!-- Basic Device Information Card -->
            <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" app:cardCornerRadius="12dp" app:cardElevation="4dp">

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">

                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/basic_device_info" android:textSize="18sp" android:textStyle="bold" android:textColor="?attr/colorPrimary" android:layout_marginBottom="12dp" />

                    <!-- Device Model -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="8dp">

                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/device_model" android:textStyle="bold" />

                        <TextView android:id="@+id/tvDeviceModel" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" android:text="@string/loading" />
                    </LinearLayout>

                    <!-- Manufacturer -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="8dp">

                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/manufacturer" android:textStyle="bold" />

                        <TextView android:id="@+id/tvManufacturer" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" android:text="@string/loading" />
                    </LinearLayout>

                    <!-- Android Version -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="8dp">

                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/android_version" android:textStyle="bold" />

                        <TextView android:id="@+id/tvAndroidVersion" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" android:text="@string/loading" />
                    </LinearLayout>

                    <!-- SDK Version -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="8dp">

                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/sdk_version" android:textStyle="bold" />

                        <TextView android:id="@+id/tvSdkVersion" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" android:text="@string/loading" />
                    </LinearLayout>

                    <!-- Device ID -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">

                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/device_id" android:textStyle="bold" />

                        <TextView android:id="@+id/tvDeviceId" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" android:text="@string/loading" android:textIsSelectable="true" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Network Information Card -->
            <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" app:cardCornerRadius="12dp" app:cardElevation="4dp">

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">

                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/network_information" android:textSize="18sp" android:textStyle="bold" android:textColor="?attr/colorPrimary" android:layout_marginBottom="12dp" />

                    <!-- IP Address -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="8dp">

                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/ip_address" android:textStyle="bold" />

                        <TextView android:id="@+id/tvIpAddress" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" android:text="@string/loading" android:textIsSelectable="true" />
                    </LinearLayout>

                    <!-- MAC Address -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="8dp">

                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/mac_address" android:textStyle="bold" />

                        <TextView android:id="@+id/tvMacAddress" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" android:text="@string/loading" android:textIsSelectable="true" />
                    </LinearLayout>

                    <!-- WiFi Status -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">

                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/wifi_status" android:textStyle="bold" />

                        <TextView android:id="@+id/tvWifiStatus" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" android:text="@string/loading" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Wearable Device Information Card -->
            <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" app:cardCornerRadius="12dp" app:cardElevation="4dp">

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">

                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/wearable_info" android:textSize="18sp" android:textStyle="bold" android:textColor="?attr/colorPrimary" android:layout_marginBottom="12dp" />

                    <!-- Wearable Device Info -->
                    <TextView android:id="@+id/tvWearableInfo" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/loading" android:textColor="?attr/colorOnSurface" android:layout_marginBottom="12dp" />

                    <!-- Heart Rate Sensor -->
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/heart_rate_sensor" android:textStyle="bold" android:textColor="?attr/colorPrimary" android:layout_marginBottom="4dp" />

                    <TextView android:id="@+id/tvHeartRateSensor" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/loading" android:textColor="?attr/colorOnSurface" android:layout_marginBottom="12dp" />

                    <!-- SpO2 Sensor -->
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/spo2_sensor" android:textStyle="bold" android:textColor="?attr/colorPrimary" android:layout_marginBottom="4dp" />

                    <TextView android:id="@+id/tvSpO2Sensor" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/loading" android:textColor="?attr/colorOnSurface" android:layout_marginBottom="12dp" />

                    <!-- Motion Sensors -->
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/accelerometer_sensor" android:textStyle="bold" android:textColor="?attr/colorPrimary" android:layout_marginBottom="4dp" />

                    <TextView android:id="@+id/tvAccelerometer" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/loading" android:textColor="?attr/colorOnSurface" android:layout_marginBottom="12dp" />

                    <!-- Additional Sensors -->
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/additional_sensors" android:textStyle="bold" android:textColor="?attr/colorPrimary" android:layout_marginBottom="4dp" />

                    <TextView android:id="@+id/tvAdditionalSensors" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/loading" android:textColor="?attr/colorOnSurface" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Phone Sensors Card -->
            <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" app:cardCornerRadius="12dp" app:cardElevation="4dp">

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">

                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/health_sensors" android:textSize="18sp" android:textStyle="bold" android:textColor="?attr/colorPrimary" android:layout_marginBottom="12dp" />

                    <!-- Step Counter -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="8dp">

                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/step_counter_sensor" android:textStyle="bold" />

                        <TextView android:id="@+id/tvStepCounter" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" android:text="@string/loading" />
                    </LinearLayout>

                    <!-- Gyroscope -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">

                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/gyroscope_sensor" android:textStyle="bold" />

                        <TextView android:id="@+id/tvGyroscope" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" android:text="@string/loading" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Health Connect Support Card -->
            <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="32dp" app:cardCornerRadius="12dp" app:cardElevation="4dp">

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">

                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/health_connect_support" android:textSize="18sp" android:textStyle="bold" android:textColor="?attr/colorPrimary" android:layout_marginBottom="12dp" />

                    <!-- Health Connect Status -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">

                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/health_connect_support" android:textStyle="bold" />

                        <TextView android:id="@+id/tvHealthConnectSupport" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" android:text="@string/loading" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>