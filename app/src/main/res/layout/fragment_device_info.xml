<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent" android:padding="16dp">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">

        <!-- Header -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="16dp">
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/device_information" android:textSize="24sp" android:textStyle="bold" android:textColor="?attr/colorPrimary" />
            <ImageButton android:id="@+id/btnRefreshInfo" android:layout_width="48dp" android:layout_height="48dp" android:contentDescription="@string/refresh_device_info" android:src="@drawable/icons8_refresh" android:background="?attr/selectableItemBackgroundBorderless" android:padding="8dp" android:scaleType="centerInside" app:tint="?attr/colorPrimary" />
        </LinearLayout>

        <!-- Basic Device Information Card -->
        <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" app:cardCornerRadius="12dp" app:cardElevation="4dp">

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/basic_device_info" android:textSize="18sp" android:textStyle="bold" android:textColor="?attr/colorPrimary" android:layout_marginBottom="12dp" />

                <!-- Device Model -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="8dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/device_model" android:textStyle="bold" />

                    <TextView android:id="@+id/tvDeviceModel" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" android:text="Loading..." />
                </LinearLayout>

                <!-- Manufacturer -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="8dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/manufacturer" android:textStyle="bold" />

                    <TextView android:id="@+id/tvManufacturer" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" android:text="Loading..." />
                </LinearLayout>

                <!-- Android Version -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="8dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/android_version" android:textStyle="bold" />

                    <TextView android:id="@+id/tvAndroidVersion" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" android:text="Loading..." />
                </LinearLayout>                <!-- SDK Version -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="8dp">

                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/sdk_version" android:textStyle="bold" />

                    <TextView android:id="@+id/tvSdkVersion" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" android:text="Loading..." />
                </LinearLayout>

                <!-- Device ID -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">

                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/device_id" android:textStyle="bold" />

                    <TextView android:id="@+id/tvDeviceId" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" android:text="Loading..." android:textIsSelectable="true" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Network Information Card -->
        <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" app:cardCornerRadius="12dp" app:cardElevation="4dp">

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/network_information" android:textSize="18sp" android:textStyle="bold" android:textColor="?attr/colorPrimary" android:layout_marginBottom="12dp" />

                <!-- IP Address -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="8dp">

                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/ip_address" android:textStyle="bold" />

                    <TextView android:id="@+id/tvIpAddress" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" android:text="Loading..." android:textIsSelectable="true" />
                </LinearLayout>

                <!-- MAC Address -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="8dp">

                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/mac_address" android:textStyle="bold" />

                    <TextView android:id="@+id/tvMacAddress" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" android:text="Loading..." android:textIsSelectable="true" />
                </LinearLayout>

                <!-- WiFi Status -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">

                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/wifi_status" android:textStyle="bold" />

                    <TextView android:id="@+id/tvWifiStatus" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" android:text="Loading..." />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Galaxy Watch Fit3 Information Card -->
        <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" app:cardCornerRadius="12dp" app:cardElevation="4dp">

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/wearable_info" android:textSize="18sp" android:textStyle="bold" android:textColor="?attr/colorPrimary" android:layout_marginBottom="12dp" />

                <!-- Wearable Connection Status -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="12dp">

                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/device_status_connected" android:textStyle="bold" />

                    <TextView android:id="@+id/tvWearableInfo" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" android:text="@string/unknown_status" />
                </LinearLayout>

                <!-- Heart Rate Sensor -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginBottom="12dp">

                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/heart_rate_sensor" android:textStyle="bold" android:layout_marginBottom="4dp" />

                    <TextView android:id="@+id/tvHeartRateSensor" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/unknown_status" android:textSize="14sp" android:lineSpacingExtra="2dp" />
                </LinearLayout>

                <!-- SpO2 Sensor -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginBottom="12dp">

                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/spo2_sensor" android:textStyle="bold" android:layout_marginBottom="4dp" />

                    <TextView android:id="@+id/tvSpO2Sensor" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/unknown_status" android:textSize="14sp" android:lineSpacingExtra="2dp" />
                </LinearLayout>

                <!-- Accelerometer -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginBottom="12dp">

                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/accelerometer_sensor" android:textStyle="bold" android:layout_marginBottom="4dp" />

                    <TextView android:id="@+id/tvAccelerometer" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/unknown_status" android:textSize="14sp" android:lineSpacingExtra="2dp" />
                </LinearLayout>

                <!-- Additional Sensors -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">

                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/additional_sensors" android:textStyle="bold" android:layout_marginBottom="4dp" />

                    <TextView android:id="@+id/tvAdditionalSensors" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/unknown_status" android:textSize="14sp" android:lineSpacingExtra="2dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Phone Sensors Card -->
        <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" app:cardCornerRadius="12dp" app:cardElevation="4dp">

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/health_sensors" android:textSize="18sp" android:textStyle="bold" android:textColor="?attr/colorPrimary" android:layout_marginBottom="12dp" />

                <!-- Step Counter -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="8dp">

                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/step_counter_sensor" android:textStyle="bold" />

                    <TextView android:id="@+id/tvStepCounter" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" android:text="@string/unknown_status" />
                </LinearLayout>

                <!-- Gyroscope -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">

                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/gyroscope_sensor" android:textStyle="bold" />

                    <TextView android:id="@+id/tvGyroscope" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" android:text="@string/unknown_status" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Health Connect Support Card -->
        <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="12dp" app:cardElevation="4dp">

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/health_connect_support" android:textSize="18sp" android:textStyle="bold" android:textColor="?attr/colorPrimary" android:layout_marginBottom="12dp" />

                <!-- Health Connect Support -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">

                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/health_connect_support" android:textStyle="bold" />

                    <TextView android:id="@+id/tvHealthConnectSupport" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" android:text="@string/unknown_status" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>